<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="25dp">

    <Button
        android:id="@+id/btn_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of all" />
    <EditText
        android:id="@+id/et_get_id"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:hint="ID"
        android:inputType="number"/>
    <Button
        android:id="@+id/btn_get_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get one Employee" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:id="@+id/et_create_name"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:hint="Name"/>
        <EditText
            android:id="@+id/et_create_salary"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:inputType="number"
            android:hint="Salary"/>
        <EditText
            android:id="@+id/et_create_age"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:hint="Age"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Employee" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/et_update_id"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:inputType="number"
            android:hint="id"/>
        <EditText
            android:id="@+id/et_update_name"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:hint="Name"/>
        <EditText
            android:id="@+id/et_update_salary"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:inputType="number"
            android:hint="Salary"/>
        <EditText
            android:id="@+id/et_update_age"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:hint="Age"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Employee" />
    <EditText
        android:id="@+id/et_delete_id"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:hint="ID"/>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Employee" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textSize="17sp"
        android:textColor="#383737"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp">
        <TextView
            android:id="@+id/tv_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#383737"/>
    </ScrollView>

</LinearLayout>